<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <data/>
    <RelativeLayout
        android:id="@+id/mainlayout"
        android:clickable="true"
        android:background="@color/little_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--    toolbar-->
        <RelativeLayout
            android:id="@+id/toolbar"
            android:paddingHorizontal="@dimen/size_10"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@drawable/toolbar_style1_yellow">
            <ImageView
                android:id="@+id/imgBack"
                android:rotationY="@integer/locale_mirror_flip"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:src="@mipmap/back"/>
            <CustomView.CustomTextView
                app:customFont="@string/DroidSans"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/white"
                android:text="@string/change_mobile_no"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:background="@color/little_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_20"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_25"
                    app:cardUseCompatPadding="true"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40">
                        <LinearLayout
                            android:id="@+id/llmobileno"
                            android:layout_centerVertical="true"
                            android:layoutDirection="ltr"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/llCode"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_15"
                                    android:src="@mipmap/mobile_dark"/>
                                <ImageView
                                    android:id="@+id/imgFlag"
                                    android:layout_marginStart="@dimen/margin_10"
                                    android:src="@drawable/saudi_flag"
                                    android:layout_width="@dimen/size_30"
                                    android:layout_height="@dimen/size_30"/>
                                <ImageView
                                    android:layout_width="@dimen/margin_15"
                                    android:layout_height="@dimen/margin_15"
                                    android:layout_marginStart="@dimen/margin_5"
                                    android:src="@drawable/arrow_down_yellow"/>
                                <CustomView.CustomTextView
                                    android:id="@+id/txtCountryCode"
                                    android:textSize="@dimen/textsize_16"
                                    android:layout_marginStart="@dimen/margin_10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"/>
                                <View
                                    android:layout_marginStart="@dimen/margin_10"
                                    android:layout_width="@dimen/margin_1"
                                    android:layout_height="match_parent"
                                    android:background="@color/white_dlg"/>
                            </LinearLayout>
                            <CustomView.CustomEditText
                                android:id="@+id/etmobileno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparents"
                                android:hint="@string/mobileno"
                                android:paddingHorizontal="@dimen/margin_10"
                                android:inputType="numberSigned"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textCursorDrawable="@null"
                                android:textAlignment="viewStart"
                                android:gravity="start"
                                android:textSize="@dimen/textsize_16"
                                app:customFont="@string/DroidSans" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal = "@dimen/margin_10"
                    android:layout_marginTop = "@dimen/margin_20"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_10"
                    app:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/size_20"
                        android:background="@drawable/rounded_box_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <CustomView.CustomTextView
                            android:layout_width="0dp"
                            android:layout_marginStart="@dimen/size_20"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewStart"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:layout_weight="1"
                            android:text="@string/allow_find_mobile"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_15" />
                        <ToggleButton
                            android:id="@+id/tgAllowFindMobile"
                            android:textOff=""
                            android:textOn=""
                            android:checked="true"
                            android:layout_marginEnd="@dimen/size_20"
                            android:layout_width="@dimen/size_60"
                            android:layout_height="@dimen/size_35"
                            android:background="@drawable/custom_radio_button"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginHorizontal = "@dimen/margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/size_20"
                    android:background="@color/little_grey"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <CustomView.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/size_20"
                        android:text="@string/change_mobile_exp"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_15" />
                    <CustomView.CustomButtonView
                        android:id="@+id/btNext"
                        app:customFont="@string/DroidSans"
                        android:layout_marginTop="@dimen/size_40"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/size_20"
                        android:layout_width="@dimen/size_120"
                        android:layout_height="wrap_content"
                        android:text="@string/next_big"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_box_yellow_10"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</layout>
