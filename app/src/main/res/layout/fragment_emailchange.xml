<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <data/>
    <RelativeLayout
        android:clickable="true"
        android:id="@+id/llMainlayout"
        android:background="@color/little_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--    toolbar-->
        <RelativeLayout
            android:id="@+id/toolbar"
            android:paddingHorizontal="@dimen/size_10"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@drawable/toolbar_style1_yellow">
            <ImageView
                android:id="@+id/imgBack"
                android:rotationY="@integer/locale_mirror_flip"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:src="@mipmap/back"/>
            <CustomView.CustomTextView
                app:customFont="@string/DroidSans"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/white"
                android:text="@string/change_email"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:background="@color/little_grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/little_grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_10"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_10"
                    app:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:paddingVertical="@dimen/size_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_box_white"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <CustomView.CustomTextView
                            android:id="@+id/txtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:paddingHorizontal="@dimen/textsize_15"
                            android:textColor="@color/black"/>
                        <CustomView.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_30"
                            android:text="@string/change_email_exp"
                            android:paddingHorizontal="@dimen/textsize_15"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_10"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_10"
                    app:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/size_20"
                        android:paddingBottom="@dimen/size_50"
                        android:background="@drawable/rounded_box_white"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <CustomView.CustomEditText
                            android:id="@+id/edtNewEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/textsize_15"
                            android:background="@color/white"
                            android:textAlignment="viewStart"
                            android:hint="@string/new_email_address"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            app:customFont="@string/DroidSans"
                            android:textSize="@dimen/textsize_15"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_10"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_10"
                    app:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/margin_10">
                        <CustomView.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/size_10"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/allow_to_find_me"
                            android:textAlignment="viewStart"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_15" />
                        <ToggleButton
                            android:id="@+id/ivallow_notification"
                            android:textOff=""
                            android:textOn=""
                            android:checked="true"
                            android:layout_width="@dimen/size_60"
                            android:layout_height="@dimen/size_35"
                            android:background="@drawable/custom_radio_button"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/size_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/size_20"
                    android:background="@color/little_grey"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <CustomView.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/size_20"
                        android:text="@string/change_email_exp2"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_15" />
                    <CustomView.CustomButtonView
                        android:id="@+id/btNext"
                        app:customFont="@string/DroidSans"
                        android:layout_marginTop="@dimen/size_40"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/size_20"
                        android:layout_width="@dimen/size_120"
                        android:layout_height="wrap_content"
                        android:text="@string/next_big"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_box_yellow_10"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</layout>
