<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:clickable="true"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_marginVertical="@dimen/size_50"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/rounded_box_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/decoImg"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgFlare"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:src="@drawable/tea"
                android:layout_marginEnd="@dimen/margin_10"/>
            <ImageView
                android:id="@+id/imgTree"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:src="@drawable/tree"
                android:layout_marginEnd="@dimen/margin_10"/>
            <ImageView
                android:id="@+id/imgDrink"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:src="@drawable/drink"
                android:layout_marginEnd="@dimen/margin_10"/>
            <ImageView
                android:id="@+id/imgFood"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:src="@drawable/food"
                android:layout_marginEnd="@dimen/margin_10"/>
            <ImageView
                android:id="@+id/imgSleep"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:src="@drawable/sleep"
                android:layout_marginEnd="@dimen/margin_10"/>

            <ImageView
                android:id="@+id/imgShop"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:src="@drawable/shop"
                android:layout_marginEnd="@dimen/margin_10"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/searchBox"
            android:layout_below="@id/decoImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginHorizontal="@dimen/size_10"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardElevation="@dimen/margin_2"
            card_view:cardCornerRadius="@dimen/size_30"
            >
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/size_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40">
                <CustomView.CustomEditText
                    android:id="@+id/search_edit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"
                    android:background="@drawable/rounded_box_grey"
                    android:layout_centerInParent="true"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:hint="@string/search_around"
                    android:paddingStart="@dimen/margin_16"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/size_50"
                    android:paddingBottom="@dimen/margin_10"
                    android:singleLine="true"
                    android:textColor="#7E77AD"
                    android:textColorHint="#7E77AD"
                    android:textDirection="locale"
                    android:textSize="@dimen/textsize_14" />
                <ImageView
                    android:id="@+id/search_btn"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:src="@drawable/search_purple"
                    android:clickable="true"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_below="@+id/searchBox"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHotspot"
                android:scrollbars="vertical"
                android:scrollbarThumbVertical="@color/darkPurple"
                android:scrollbarSize="@dimen/size_1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/white"
                android:padding="@dimen/margin_10"/>
            <CustomView.CustomTextView
                android:id="@+id/txtNoData"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_15"
                app:customFont="@string/DroidSans"/>
        </RelativeLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/imgClose"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/size_10"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/close_purple"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />
    <ImageView
        android:id="@+id/imgDown"
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/down_mark"/>
</RelativeLayout>