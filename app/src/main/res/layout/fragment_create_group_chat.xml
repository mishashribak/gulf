<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <!--<fetchHotspotAndFrndsDetailData></fetchHotspotAndFrndsDetailData>-->
    <data/>
    <RelativeLayout
        android:clickable="true"
        android:background="@color/setting_bkg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--    toolbar-->
        <RelativeLayout
            android:id="@+id/toolbar"
            android:paddingHorizontal="@dimen/size_10"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:gravity="center_vertical"
            android:background="@drawable/toolbar_style1_yellow">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgBack"
                        android:rotationY="@integer/locale_mirror_flip"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_width="@dimen/toolbar_icon_size"
                        android:layout_height="@dimen/toolbar_icon_size"
                        android:src="@mipmap/back"/>
                    <CustomView.CustomTextView
                        android:id="@+id/txtTitle"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/toolbar_title_size"
                        android:textColor="@color/white"
                        app:customFont="@string/DroidSans"
                        android:text="@string/add_participants"/>
                </RelativeLayout>

                <CustomView.CustomTextView
                    android:id="@+id/txtSelNum"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    app:customFont="@string/DroidSans" />
            </LinearLayout>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/searchBox"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:layout_marginTop="-5dp"
            android:layout_marginHorizontal="@dimen/margin_5"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardElevation="@dimen/margin_2"
            app:cardCornerRadius="@dimen/size_30"
            >
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/size_10"
                android:layout_height="@dimen/size_40"
                android:gravity="center">
                <RelativeLayout
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CustomView.CustomEditText
                        android:id="@+id/search_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_box_grey"
                        android:layout_centerInParent="true"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:hint="@string/searchForWords"
                        android:paddingStart="@dimen/margin_16"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingEnd="@dimen/size_50"
                        android:paddingBottom="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColor="#7E77AD"
                        android:textColorHint="#7E77AD"
                        android:textDirection="locale"
                        android:textSize="@dimen/textsize_14"
                        app:customFont="@string/DroidSans" />

                    <ImageView
                        android:id="@+id/search_btn"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:layout_width="@dimen/common_icon_size"
                        android:layout_height="@dimen/common_icon_size"
                        android:src="@drawable/search_purple"
                        android:clickable="true"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProfile"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:paddingVertical="@dimen/margin_10"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@id/searchBox"
            android:scrollbarThumbVertical="@color/darkPurple"
            android:scrollbars="horizontal"
            android:scrollbarThumbHorizontal="@color/darkPurple"
            android:scrollbarSize="@dimen/size_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_below="@id/rvProfile"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/setting_bkg"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_10"
                    card_view:cardUseCompatPadding="true"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--<androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvGroup"
                            android:background="@drawable/rounded_box_white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:paddingBottom="@dimen/size_50"/>-->
                        <in.myinnos.alphabetsindexfastscrollrecycler.IndexFastScrollRecyclerView
                            android:id="@+id/rvGroup"
                            android:paddingRight="@dimen/margin_30"
                            android:paddingBottom="@dimen/size_50"
                            android:paddingTop="@dimen/size_20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <CustomView.CustomTextView
                            android:id="@+id/txtNoData"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/no_data"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            app:customFont="@string/DroidSans_Bold"/>
                      <!--  <com.alphabetik.Alphabetik
                            android:id="@+id/alphSectionIndex"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            app:fontSize="@dimen/textsize_12"
                            app:itemsColor="@color/backgroundDefaultColor" />-->
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
        </LinearLayout>
        <CustomView.CustomTextView
            android:id="@+id/txtNext"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/size_20"
            android:text="@string/next"
            android:paddingVertical="@dimen/margin_10"
            android:paddingHorizontal="@dimen/size_60"
            android:background="@drawable/rounded_box_yellow_20"
            android:textSize="@dimen/textsize_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customFont="@string/DroidSans"/>
    </RelativeLayout>

</layout>
