<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <RelativeLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:background="@drawable/rounded_box_white">

        <LinearLayout
            android:id="@+id/llMap"
            android:layout_marginHorizontal="@dimen/size_10"
            android:background="@drawable/friend_bt_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/flmapcontainers"
                class="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_200"/>
            <LinearLayout
                android:id="@+id/llVisited"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60"
                android:orientation="horizontal"
                android:background="@drawable/friend_bt_border">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <CustomView.CustomTextView
                        android:id="@+id/txtVisitedLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/daily_text_color"
                        android:textSize="@dimen/textsize_15"/>
                    <CustomView.CustomTextView
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/visited_locations"
                        android:textColor="@color/daily_text_color"
                        android:textSize="@dimen/textsize_15"/>
                </LinearLayout>

                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="0.8dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginVertical="@dimen/size_10"
                    android:background="@color/daily_text_color"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <CustomView.CustomTextView
                        android:id="@+id/txtVisitedHotspot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/daily_text_color"
                        android:textSize="@dimen/textsize_15"/>
                    <CustomView.CustomTextView
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/visited_hotspots"
                        android:textColor="@color/daily_text_color"
                        android:textSize="@dimen/textsize_15"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <CustomView.CustomTextView
            android:id="@+id/title"
            android:layout_marginTop="@dimen/size_20"
            android:layout_below="@id/llMap"
            android:layout_centerHorizontal="true"
            android:text="@string/hotspots_updates"
            android:textColor="@color/darkPurple"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_below="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CustomView.CustomTextView
                android:id="@+id/txtNoData"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_15"
                app:customFont="@string/DroidSans"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHotspotsUpdate"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:scrollbarThumbVertical="@color/darkPurple"
                android:scrollbarSize="@dimen/size_1"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginHorizontal="@dimen/size_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:customFont="@string/DroidSans_Bold"
                />
        </RelativeLayout>

        <!--    toolbar-->
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_8"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@drawable/rounded_box_purple">
            <ImageView
                android:id="@+id/imgMenu"
                android:rotationY="@integer/locale_mirror_flip"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:src="@drawable/new_menu"/>
            <CustomView.CustomTextView
                app:customFont="@string/DroidSans"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/white"
                android:text="@string/khm_map"/>
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_alignParentStart="true"
                    android:layout_width="@dimen/toolbar_icon_size"
                    android:layout_height="@dimen/toolbar_icon_size"
                    android:src="@mipmap/search_active"/>
                <RelativeLayout
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_10">
                    <ImageView
                        android:id="@+id/imgMessage"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/toolbar_icon_size"
                        android:layout_height="@dimen/toolbar_icon_size"
                        android:src="@drawable/messages"/>

                    <ImageView
                        android:id="@+id/imgBadge"
                        android:visibility="gone"
                        android:layout_width="@dimen/margin_15"
                        android:layout_height="@dimen/margin_15"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/circle_red"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>