<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:background="@color/white"/>

        <!--    toolbar-->
        <RelativeLayout
            android:id="@+id/toolbar"
            android:paddingHorizontal="@dimen/size_10"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@drawable/toolbar_style1_yellow">
            <ImageView
                android:id="@+id/imgMenu"
                android:rotationY="@integer/locale_mirror_flip"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:src="@drawable/new_menu"/>
            <CustomView.CustomTextView
                app:customFont="@string/DroidSans"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/white"
                android:text="@string/search"/>
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_10">
                    <ImageView
                        android:id="@+id/imgMessage"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/toolbar_icon_size"
                        android:layout_height="@dimen/toolbar_icon_size"
                        android:src="@drawable/messages"/>

                    <ImageView
                        android:id="@+id/imgBadge"
                        android:visibility="gone"
                        android:layout_width="@dimen/margin_15"
                        android:layout_height="@dimen/margin_15"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/circle_red"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:background="@drawable/rounded_box_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/tab"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/size_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:weightSum="4">
                <CustomView.CustomTextView
                    android:id="@+id/tabTop"
                    android:layout_weight="1"
                    android:layout_width="@dimen/size_60"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginHorizontal="@dimen/size_10"
                    android:background="@drawable/rounded_box_searchtab"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_2"
                    android:text="@string/top"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_12"
                    app:customFont="@string/DroidSans"/>
                <CustomView.CustomTextView
                    android:id="@+id/tabTag"
                    android:layout_weight="1"
                    android:layout_width="@dimen/size_60"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginHorizontal="@dimen/size_10"
                    android:background="@drawable/rounded_box_searchtab_active"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_2"
                    android:text="@string/tag"
                    android:textColor="@color/searchtab_color"
                    android:textSize="@dimen/textsize_12"
                    app:customFont="@string/DroidSans"/>
                <CustomView.CustomTextView
                    android:id="@+id/tabName"
                    android:layout_weight="1"
                    android:layout_width="@dimen/size_60"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginHorizontal="@dimen/size_10"
                    android:background="@drawable/rounded_box_searchtab"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_2"
                    android:text="@string/names"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_12"
                    app:customFont="@string/DroidSans"/>
                <CustomView.CustomTextView
                    android:id="@+id/tabLocation"
                    android:layout_weight="1"
                    android:layout_width="@dimen/size_60"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginHorizontal="@dimen/size_10"
                    android:background="@drawable/rounded_box_searchtab"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_2"
                    android:text="@string/locations"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_12"
                    app:customFont="@string/DroidSans"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rlSearchContent"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/size_100"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvUsers"
                    android:scrollbars="vertical"
                    android:scrollbarThumbVertical="@color/darkPurple"
                    android:scrollbarSize="@dimen/size_1"
                    android:background="@color/transparents"
                    android:layout_marginTop="@dimen/size_40"
                    android:paddingHorizontal="0dp"
                    android:layout_marginHorizontal="@dimen/size_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            ">

                <CustomView.CustomGridView
                    android:id="@+id/gridView"
                    android:visibility="gone"
                    android:scrollbars="vertical"
                    android:layout_marginTop="@dimen/size_40"
                    android:layout_marginHorizontal="@dimen/size_10"
                    android:scrollbarThumbVertical="@color/darkPurple"
                    android:scrollbarSize="@dimen/size_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnWidth="@dimen/size_90"
                    android:gravity="center"
                    android:horizontalSpacing="@dimen/margin_5"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="@dimen/margin_5" />

                <CustomView.CustomTextView
                    android:id="@+id/txtNoData"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_15"
                    app:customFont="@string/DroidSans"/>
            </RelativeLayout>
            <!--        search bar-->
            <androidx.cardview.widget.CardView
                android:layout_below="@+id/tab"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginHorizontal="@dimen/size_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="@dimen/margin_2"
                app:cardCornerRadius="@dimen/size_30"
                card_view:cardUseCompatPadding="true"
                >
                <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/size_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40">
                    <CustomView.CustomEditText
                        android:id="@+id/search_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_box_grey"
                        android:layout_centerInParent="true"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:hint="@string/searchForWords"
                        android:paddingStart="@dimen/margin_16"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingEnd="@dimen/size_50"
                        android:paddingBottom="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColor="#7E77AD"
                        android:textColorHint="#7E77AD"
                        android:textDirection="locale"
                        android:textSize="@dimen/textsize_14"
                        app:customFont="@string/DroidSans" />
                    <AutoCompleteTextView
                        android:id="@+id/etLocation"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_box_grey"
                        android:layout_centerInParent="true"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:hint="@string/searchForWords"
                        android:paddingStart="@dimen/margin_16"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingEnd="@dimen/size_50"
                        android:paddingBottom="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColor="#7E77AD"
                        android:textColorHint="#7E77AD"
                        android:textDirection="locale"
                        android:textSize="@dimen/textsize_14"
                        app:customFont="@string/DroidSans" />
                    <ImageView
                        android:id="@+id/search_btn"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:src="@drawable/search_purple"
                        android:clickable="true"/>

                    <CustomView.CustomTextView
                        android:id="@+id/txtParentTag"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/size_150"
                        android:singleLine="true"
                        android:textSize="@dimen/textsize_10"
                        android:text="@string/memories"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_box_parent_tag"
                        android:paddingHorizontal="@dimen/margin_10"
                        android:paddingVertical="3dp"
                        android:layout_centerVertical="true"/>
                    <CustomView.CustomTextView
                        android:id="@+id/txtSubTag"
                        android:visibility="gone"
                        android:maxWidth="@dimen/size_150"
                        android:layout_toEndOf="@id/txtParentTag"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/textsize_10"
                        android:text="@string/memories"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_box_sub_tag"
                        android:paddingHorizontal="@dimen/margin_10"
                        android:paddingVertical="3dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>
</layout>