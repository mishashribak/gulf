<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data/>
    <RelativeLayout
        android:clickable="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rLMain">

        <View
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:background="@color/white"/>

        <!--    toolbar-->
        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:background="@drawable/rounded_box_yellow">
            <ImageView
                android:id="@+id/imgBack"
                android:rotationY="@integer/locale_mirror_flip"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:src="@mipmap/back"/>
            <CustomView.CustomTextView
                android:layout_marginTop="@dimen/margin_10"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:customFont="@string/DroidSans"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/white"
                android:text="@string/all_contacts"/>
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="@dimen/toolbar_icon_size"
                    android:layout_height="@dimen/toolbar_icon_size"
                    android:src="@mipmap/search"/>
                <RelativeLayout
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_10">
                    <ImageView
                        android:id="@+id/imgMessage"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/toolbar_icon_size"
                        android:layout_height="@dimen/toolbar_icon_size"
                        android:src="@drawable/messages"/>

                    <ImageView
                        android:id="@+id/imgBadge"
                        android:visibility="gone"
                        android:layout_width="@dimen/margin_15"
                        android:layout_height="@dimen/margin_15"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/circle_red"/>
                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="@dimen/size_45"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box_white"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/margin_5"
                    android:layout_height="@dimen/size_60"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_30"
                    >
                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/size_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40">
                        <CustomView.CustomEditText
                            android:id="@+id/search_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_box_grey"
                            android:layout_centerInParent="true"
                            android:gravity="start"
                            android:hint="@string/search_dot"
                            android:textAlignment="viewStart"
                            android:paddingStart="@dimen/margin_16"
                            android:paddingTop="@dimen/margin_10"
                            android:paddingEnd="@dimen/size_50"
                            android:paddingBottom="@dimen/margin_10"
                            android:singleLine="true"
                            android:textColor="#7E77AD"
                            android:textColorHint="#7E77AD"
                            android:textDirection="locale"
                            android:textSize="@dimen/textsize_14"
                            app:customFont="@string/DroidSans" />
                        <ImageView
                            android:id="@+id/search_btn"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/margin_16"
                            android:layout_width="@dimen/size_20"
                            android:layout_height="@dimen/size_20"
                            android:src="@drawable/search_purple"
                            android:clickable="true"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <CustomView.CustomTextView
                    android:textSize="@dimen/textsize_12"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/friend_on_khaleeji"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvUsersOnKhaleeji"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <CustomView.CustomTextView
                        android:id="@+id/txtNoData"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_15"
                        app:customFont="@string/DroidSans"/>
                </RelativeLayout>

                <CustomView.CustomTextView
                    android:textSize="@dimen/textsize_12"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_khaleeji"/>
                <RelativeLayout
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <in.myinnos.alphabetsindexfastscrollrecycler.IndexFastScrollRecyclerView
                        android:id="@+id/rvInviteUsers"
                        android:scrollbars="vertical"
                        android:paddingRight="@dimen/margin_30"
                        android:minHeight="400dp"
                        android:scrollbarThumbVertical="@color/darkPurple"
                        android:scrollbarSize="@dimen/size_1"
                        android:layout_marginHorizontal="@dimen/margin_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <CustomView.CustomTextView
                        android:id="@+id/txtNoInviteUserData"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_15"
                        app:customFont="@string/DroidSans"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>