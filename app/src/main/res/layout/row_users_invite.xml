<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_100"
    android:gravity="center_vertical"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/llRowItem"
    android:background="@color/transparents">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/margin_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="@dimen/margin_2"
        card_view:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/size_10"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCircleProfile"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:src="@drawable/profile_placeholder"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="@dimen/size_10"
                    android:orientation="vertical"
                    >
                    <CustomView.CustomTextView
                        android:id="@+id/tvFullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp"
                        android:paddingEnd="@dimen/margin_5"
                        android:textAlignment="viewStart"
                        android:layout_marginTop="4dp"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_15"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        app:customFont="@string/DroidSans_Bold"
                        />


                    <CustomView.CustomTextView
                        android:id="@+id/tvUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp"
                        android:paddingEnd="@dimen/margin_5"
                        android:textAlignment="viewStart"
                        android:layout_marginTop="2dp"
                        android:inputType="textNoSuggestions|textMultiLine"
                        android:maxLines="2"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_12"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        app:customFont="@string/DroidSans"
                        />

                </LinearLayout>
                <CustomView.CustomTextView
                    android:id="@+id/txtInvite"
                    android:textSize="@dimen/textsize_12"
                    android:gravity="center"
                    android:textColor="@color/darkPurple"
                    android:background="@drawable/rounded_corner_purple_border"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_5"
                    android:text="@string/invite_bt"
                    android:layout_width="@dimen/size_100"
                    app:customFont="@string/DroidSans"
                    android:layout_height="@dimen/size_30"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>