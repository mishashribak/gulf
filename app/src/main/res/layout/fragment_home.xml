<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools">

    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100"
        android:background="@color/white"/>
    <!--    toolbar-->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/rounded_box_yellow">
        <ImageView
            android:id="@+id/imgMenu"
            android:rotationY="@integer/locale_mirror_flip"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:src="@drawable/new_menu"/>
        <CustomView.CustomTextView
            android:layout_marginTop="@dimen/margin_10"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customFont="@string/DroidSans"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_title_size"
            android:text="@string/home"/>
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:src="@mipmap/search"/>
            <RelativeLayout
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginEnd="@dimen/size_10">
                <ImageView
                    android:id="@+id/imgMessage"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/toolbar_icon_size"
                    android:layout_height="@dimen/toolbar_icon_size"
                    android:src="@drawable/messages"/>

                <ImageView
                    android:id="@+id/imgBadge"
                    android:visibility="gone"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/circle_red"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/homeTab"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:layout_marginHorizontal="@dimen/margin_5"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="@dimen/margin_2"
        app:cardCornerRadius="@dimen/size_30">
        <LinearLayout
            android:id="@+id/worldActiveTab"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/size_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:background="@drawable/rounded_box_grey"
            android:gravity="center_vertical"
            android:weightSum="2">

            <CustomView.CustomTextView
                android:id="@+id/txtWorld"
                android:layout_weight="1.3"
                android:gravity="center"
                android:paddingHorizontal="@dimen/size_20"
                android:background="@drawable/rounded_box_darkpurple_20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_12"
                android:text="@string/theWorld"
                app:customFont="@string/DroidSans"/>
            <CustomView.CustomTextView
                android:id="@+id/txtFriend"
                android:textSize="@dimen/textsize_12"
                android:layout_weight="0.7"
                android:gravity="center"
                android:paddingHorizontal="@dimen/size_20"
                android:background="@drawable/rounded_box_grey"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_30"
                android:textColor="@color/darkPurple"
                android:text="@string/friends"
                app:customFont="@string/DroidSans"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/friendsActiveTab"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/size_10"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:background="@drawable/rounded_box_grey"
            android:gravity="center_vertical"
            android:weightSum="2">

            <CustomView.CustomTextView
                android:id="@+id/txtWorldB"
                android:textSize="@dimen/textsize_12"
                android:layout_weight="0.7"
                android:gravity="center"
                android:layout_height="@dimen/size_30"
                android:paddingHorizontal="@dimen/size_20"
                android:background="@drawable/rounded_box_grey"
                android:layout_width="wrap_content"
                android:textColor="@color/darkPurple"
                android:text="@string/theWorld"
                app:customFont="@string/DroidSans"/>
            <CustomView.CustomTextView
                android:id="@+id/txtFriendsB"
                android:layout_weight="1.3"
                android:textSize="@dimen/textsize_12"
                android:gravity="center"
                android:paddingHorizontal="@dimen/size_20"
                android:background="@drawable/rounded_box_darkpurple_20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="@string/friends"
                app:customFont="@string/DroidSans"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/svinfo"
        android:layout_marginTop="@dimen/size_45"
        android:paddingTop="@dimen/size_20"
        android:paddingBottom="@dimen/size_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_box_white">
        <LinearLayout
            android:id="@+id/llparent"
            android:background="@drawable/rounded_box_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginHorizontal="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <CustomView.CustomTextView
                    android:id="@+id/txtNoDataMemory"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_15"
                    app:customFont="@string/DroidSans"/>
                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:id="@+id/swipeRefresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CustomView.Video.VideoPlayerRecyclerView
                        android:id="@+id/rvMemoryUpdates"
                        android:scrollbars="vertical"
                        android:scrollbarThumbVertical="@color/darkPurple"
                        android:scrollbarSize="@dimen/size_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </CustomView.Video.VideoPlayerRecyclerView>
                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

                <ProgressBar
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/progressLoadMore"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:indeterminate="true"
                    android:layout_marginBottom="@dimen/size_10"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="@color/colorBgOptionGray"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>