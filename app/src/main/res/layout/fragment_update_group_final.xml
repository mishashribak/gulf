<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <!--<fetchHotspotAndFrndsDetailData></fetchHotspotAndFrndsDetailData>-->
    <data/>
    <RelativeLayout
        android:clickable="true"
        android:background="@color/setting_bkg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--    toolbar-->
        <RelativeLayout
            android:id="@+id/toolbar"
            android:paddingHorizontal="@dimen/size_10"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@drawable/toolbar_style1_yellow">
            <ImageView
                android:id="@+id/imgBack"
                android:rotationY="@integer/locale_mirror_flip"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:src="@mipmap/back"/>
            <CustomView.CustomTextView
                android:id="@+id/txtTitle"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/white"
                app:customFont="@string/DroidSans"
                android:text="@string/update_group"/>
            <ImageView
                android:id="@+id/imgAdd"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:src="@mipmap/plus"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/searchBox"
            android:visibility="gone"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:layout_marginTop="-5dp"
            android:layout_marginHorizontal="@dimen/margin_5"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardElevation="@dimen/margin_2"
            app:cardCornerRadius="@dimen/size_30"
            >
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/size_10"
                android:layout_height="@dimen/size_40"
                android:gravity="center">
                <RelativeLayout
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CustomView.CustomEditText
                        android:id="@+id/search_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_box_grey"
                        android:layout_centerInParent="true"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:hint="@string/searchForWords"
                        android:paddingStart="@dimen/margin_16"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingEnd="@dimen/size_50"
                        android:paddingBottom="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColor="#7E77AD"
                        android:textColorHint="#7E77AD"
                        android:textDirection="locale"
                        android:textSize="@dimen/textsize_14"
                        app:customFont="@string/DroidSans" />

                    <ImageView
                        android:id="@+id/search_btn"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:layout_width="@dimen/common_icon_size"
                        android:layout_height="@dimen/common_icon_size"
                        android:src="@drawable/search_purple"
                        android:clickable="true"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_below="@id/searchBox"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/setting_bkg"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_below="@id/searchBox"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="@dimen/margin_2"
                app:cardCornerRadius="@dimen/size_10"
                card_view:cardUseCompatPadding="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    android:layout_marginVertical="@dimen/margin_20">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgCamera"
                            android:layout_width="@dimen/size_50"
                            android:layout_height="@dimen/size_50"
                            android:src="@drawable/group_create_camera"/>
                        <LinearLayout
                            android:layout_marginStart="@dimen/margin_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <View
                                android:layout_height="@dimen/size_1"
                                android:layout_width="match_parent"
                                android:background="@color/group_line"/>
                            <CustomView.CustomEditText
                                android:id="@+id/etGroupSubject"
                                android:layout_marginVertical="@dimen/margin_5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:hint="@string/group_subject"
                                android:textColor="@color/black"
                                android:textColorHint="#989898"
                                android:textSize="@dimen/textsize_14"
                                app:customFont="@string/DroidSans"
                                />
                            <View
                                android:layout_height="@dimen/size_1"
                                android:layout_width="match_parent"
                                android:background="@color/group_line"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:visibility="invisible"
                            android:layout_width="@dimen/size_50"
                            android:layout_height="@dimen/size_30"
                            android:src="@drawable/group_create_camera"/>
                        <CustomView.CustomTextView
                            android:layout_marginStart="@dimen/margin_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:customFont="@string/DroidSans"
                            android:text="@string/provide_group"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <CustomView.CustomTextView
                android:id="@+id/txtGroupNum"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/participants"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="@dimen/margin_2"
                app:cardCornerRadius="@dimen/size_10"
                card_view:cardUseCompatPadding="true"
                >
                <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvProfile"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:background="@color/white"
                            android:layout_marginTop="@dimen/margin_10"
                            android:scrollbarThumbVertical="@color/darkPurple"
                            android:scrollbars="vertical"
                            android:scrollbarSize="@dimen/size_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="vertical">
                            <CustomView.CustomTextView
                                android:id="@+id/txtUpdateGroup"
                                android:textColor="@color/white"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/size_20"
                                android:text="@string/update_group"
                                android:paddingVertical="@dimen/margin_10"
                                android:paddingHorizontal="@dimen/size_60"
                                android:background="@drawable/rounded_box_yellow_20"
                                android:textSize="@dimen/textsize_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:customFont="@string/DroidSans"/>
                        </LinearLayout>

                    </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</layout>
