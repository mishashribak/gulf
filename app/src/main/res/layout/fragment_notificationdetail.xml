<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <!--<fetchHotspotAndFrndsDetailData></fetchHotspotAndFrndsDetailData>-->
    <data/>
    <RelativeLayout
        android:clickable="true"
        android:background="@color/little_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--    toolbar-->
        <RelativeLayout
            android:id="@+id/toolbar"
            android:paddingHorizontal="@dimen/size_10"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@drawable/toolbar_style1_yellow">
            <ImageView
                android:id="@+id/imgBack"
                android:rotationY="@integer/locale_mirror_flip"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:src="@mipmap/back"/>
            <CustomView.CustomTextView
                app:customFont="@string/DroidSans"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/white"
                android:text="@string/notification_setting"/>
        </RelativeLayout>
        <ScrollView
            android:id="@+id/svsettins"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/little_grey"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/little_grey"
                android:layoutDirection="locale">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_10"
                    card_view:cardUseCompatPadding="true"
                    >
                    <RelativeLayout
                        android:id="@+id/llallownotif"
                        android:background="@drawable/rounded_box_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <CustomView.CustomTextView
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/notificationallow_ar"
                            android:textColor="@color/black"
                            android:textAlignment="viewStart"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:textSize="@dimen/textsize_15"
                            app:customFont="@string/DroidSans" />
                        <ToggleButton
                            android:id="@+id/ivallow_notification"
                            android:textOff=""
                            android:textOn=""
                            android:checked="true"
                            android:layout_width="@dimen/size_60"
                            android:layout_height="@dimen/size_35"
                            android:background="@drawable/custom_radio_button"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_10"
                    card_view:cardUseCompatPadding="true"
                    >
                    <RelativeLayout
                        android:id="@+id/llfriendrequest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <CustomView.CustomTextView
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/meetupfriendreq"
                            android:textColor="@color/black"
                            android:textDirection="locale"
                            android:textSize="@dimen/textsize_15"
                            android:textAlignment="viewStart"
                            android:layout_marginEnd="@dimen/margin_10"
                            app:customFont="@string/DroidSans" />

                        <ToggleButton
                            android:id="@+id/ivfriendrequest"
                            android:textOff=""
                            android:textOn=""
                            android:checked="true"
                            android:layout_width="@dimen/size_60"
                            android:layout_height="@dimen/size_35"
                            android:background="@drawable/custom_radio_button"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_10"
                    card_view:cardUseCompatPadding="true"
                    >
                    <RelativeLayout
                        android:id="@+id/llgsnaps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <CustomView.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:text="@string/liked_comments_notification"
                            android:textColor="@color/black"
                            android:textDirection="locale"
                            android:textSize="@dimen/textsize_15"
                            app:customFont="@string/DroidSans" />

                        <ToggleButton
                            android:id="@+id/ivgsnaps"
                            android:textOff=""
                            android:textOn=""
                            android:layout_width="@dimen/size_60"
                            android:layout_height="@dimen/size_35"
                            android:checked="true"
                            android:background="@drawable/custom_radio_button"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_10"
                    card_view:cardUseCompatPadding="true"
                    >
                    <RelativeLayout
                        android:id="@+id/llmessages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"

                        android:padding="10dp">

                        <CustomView.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/message_notifications"
                            android:textColor="@color/black"
                            android:textDirection="locale"
                            android:textSize="@dimen/textsize_15"
                            android:layout_marginEnd="@dimen/margin_10"
                            app:customFont="@string/DroidSans"
                            />
                        <ToggleButton
                            android:id="@+id/ivmessages"
                            android:textOff=""
                            android:textOn=""
                            android:layout_width="@dimen/size_60"
                            android:layout_height="@dimen/size_35"
                            android:checked="true"
                            android:background="@drawable/custom_radio_button"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_10"
                    card_view:cardUseCompatPadding="true"
                    >
                    <RelativeLayout
                        android:id="@+id/llwhatslive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"

                        android:padding="10dp">

                        <CustomView.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/grounp_chat_notifications"
                            android:textColor="@color/black"
                            android:textDirection="locale"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:textSize="@dimen/textsize_15"
                            app:customFont="@string/DroidSans" />
                        <ToggleButton
                            android:id="@+id/ivlive"
                            android:textOff=""
                            android:textOn=""
                            android:layout_width="@dimen/size_60"
                            android:layout_height="@dimen/size_35"
                            android:background="@drawable/custom_radio_button"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>