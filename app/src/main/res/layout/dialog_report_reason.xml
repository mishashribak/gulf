<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparents"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/dlg"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="@color/transparents">
        <LinearLayout
            android:layout_margin="4dp"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:background="@drawable/rounded_box_white"
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <CustomView.CustomTextView
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:gravity="center"
                android:text="@string/report_reason"
                android:textColor="@color/daily_text_color"
                android:textSize="@dimen/textsize_20"
                app:customFont="@string/DroidSans" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAbusiveMe"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginTop="@dimen/size_10"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/margin_2"
                app:cardCornerRadius="@dimen/size_30"
                >
                <LinearLayout
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/checkAbusiveMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/custom_checkbox_reason"
                        android:checked="true" />
                    <CustomView.CustomTextView
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/textsize_15"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_height="match_parent"
                        android:textColor="@color/daily_text_color"
                        android:text="@string/reason_abuse_me"
                        app:customFont="@string/DroidSans" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAbusiveOthers"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginTop="@dimen/size_10"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/margin_2"
                app:cardCornerRadius="@dimen/size_30"
                >
                <LinearLayout
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/checkAbuseOthers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/custom_checkbox_reason" />

                    <CustomView.CustomTextView
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/textsize_15"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_5"
                        android:textColor="@color/daily_text_color"
                        android:text="@string/reason_abuse_others"
                        app:customFont="@string/DroidSans" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPosting"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginTop="@dimen/size_10"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/margin_2"
                app:cardCornerRadius="@dimen/size_30"
                >
                <LinearLayout
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/checkPosting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/custom_checkbox_reason"/>
                    <CustomView.CustomTextView
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/textsize_15"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_5"
                        android:textColor="@color/daily_text_color"
                        android:text="@string/reason_post"
                        app:customFont="@string/DroidSans" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardUnsafe"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginTop="@dimen/size_10"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/margin_2"
                app:cardCornerRadius="@dimen/size_30"
                >
                <LinearLayout
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/checkUnsafe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/custom_checkbox_reason" />
                    <CustomView.CustomTextView
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/textsize_15"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_5"
                        android:textColor="@color/daily_text_color"
                        android:text="@string/reason_unsafe"
                        app:customFont="@string/DroidSans" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOther"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/size_50"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginTop="@dimen/size_10"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/margin_2"
                app:cardCornerRadius="@dimen/size_30"
                >
                <LinearLayout
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/checkOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/custom_checkbox_reason" />
                    <CustomView.CustomTextView
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/textsize_15"
                        android:textColor="@color/daily_text_color"
                        android:text="@string/reason_other"
                        app:customFont="@string/DroidSans" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgClose"
            android:visibility="gone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/close_purple"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <CustomView.CustomTextView
            android:id="@+id/txtSubmit"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_40"
            android:textColor="@color/white"
            android:text="@string/submit"
            android:textSize="@dimen/textsize_15"
            android:background="@drawable/rounded_box_yellow_20"
            app:customFont="@string/DroidSans"/>
    </RelativeLayout>

</RelativeLayout>