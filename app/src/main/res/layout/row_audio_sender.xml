<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:gravity="end"
    android:orientation="horizontal"
    android:padding="4dp">

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_gif"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:src="@drawable/audiooo"/>

            <pl.droidsonroids.gif.GifImageView
                android:visibility="gone"
                android:id="@+id/iv_audio_gif"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:src="@drawable/audio_gif"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_play"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:src="@drawable/play_audio_icon" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_pause"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:src="@drawable/ic_pause_circle_filled_gray_24dp" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:drawableEnd="@drawable/ic_done_all_black_24dp"
            android:drawablePadding="4dp"
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_pic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/profile_placeholder" />

</LinearLayout>