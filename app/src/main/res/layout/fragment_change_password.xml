<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <!--<fetchHotspotAndFrndsDetailData></fetchHotspotAndFrndsDetailData>-->
    <data/>
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:clickable="true"
        android:background="@color/little_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--    toolbar-->
        <RelativeLayout
            android:id="@+id/toolbar"
            android:paddingHorizontal="@dimen/size_10"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@drawable/toolbar_style1_yellow">
            <ImageView
                android:id="@+id/imgBack"
                android:rotationY="@integer/locale_mirror_flip"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:src="@mipmap/back"/>
            <CustomView.CustomTextView
                app:customFont="@string/DroidSans"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/white"
                android:text="@string/update_pwd"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:background="@color/little_grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/little_grey"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_10"
                    card_view:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/size_20"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <CustomView.CustomEditText
                            android:id="@+id/edtCurrentPwd"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_30"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/size_10"
                            android:background="@color/white"
                            android:hint="@string/current_pwd_title"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_15"
                            app:customFont="@string/DroidSans"
                            />
                        <CustomView.CustomTextView
                            android:id="@+id/txtForgotPwd"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/forgotpassword"
                            android:paddingHorizontal="@dimen/size_10"
                            android:textColor="@color/yellow_dark"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="@dimen/margin_2"
                    app:cardCornerRadius="@dimen/size_10"
                    card_view:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="@dimen/size_80">
                            <CustomView.CustomEditText
                                android:id="@+id/edtNewPwd"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="@dimen/size_10"
                                android:background="@color/white"
                                android:hint="@string/new_pwd_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_15"
                                app:customFont="@string/DroidSans"
                                />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_1"
                            android:text="@string/forgotpassword"
                            android:layout_marginHorizontal="@dimen/margin_10"
                            android:background="@color/daily_text_color"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="@dimen/size_80">
                            <CustomView.CustomEditText
                                android:id="@+id/edtConfrimPwd"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="@dimen/size_10"
                                android:background="@color/white"
                                android:hint="@string/confirm_pwd_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_15"
                                app:customFont="@string/DroidSans"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


              
            <LinearLayout
                android:background="@color/little_grey"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <CustomView.CustomTextView
                    android:id="@+id/txtConfirm"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/confirm"
                    android:textSize="@dimen/textsize_15"
                    android:paddingVertical="@dimen/size_10"
                    android:paddingHorizontal="@dimen/size_40"
                    android:background="@drawable/rounded_box_purple"/>
            </LinearLayout>
              

            </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>

</layout>
