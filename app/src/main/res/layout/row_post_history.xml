<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    app:civ_border_width="@dimen/margin_2"
                    app:civ_border_color="@color/white"
                    android:src="@drawable/profile_placeholder"/>
                <CustomView.CustomTextView
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="Hallie_Jennings"
                    app:customFont="@string/DroidSans_Bold"/>
                <CustomView.CustomTextView
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="Nice Photo !" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/size_50"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CustomView.CustomTextView
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="1h" />

                <CustomView.CustomTextView
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_marginStart="@dimen/margin_30"
                    android:gravity="center"
                    android:text="@string/reply"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12" />
                <ImageView
                    android:id="@+id/imgHeart"
                    android:layout_marginStart="@dimen/size_30"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:src="@drawable/like_red"/>

                <CustomView.CustomTextView
                    android:id="@+id/txtLike"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="1 like" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginStart="@dimen/size_30"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="gone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    app:civ_border_width="@dimen/margin_2"
                    app:civ_border_color="@color/white"
                    android:src="@drawable/profile_placeholder"/>
                <CustomView.CustomTextView
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="Jasmine_mohi1"
                    app:customFont="@string/DroidSans_Bold"/>
                <CustomView.CustomTextView
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="May god bless you" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginStart="@dimen/size_50"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CustomView.CustomTextView
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="1h" />

                <CustomView.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_30"
                    android:gravity="center"
                    android:text="@string/reply"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12" />
                <ImageView
                    android:layout_marginStart="@dimen/size_30"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:src="@drawable/heart"/>

                <CustomView.CustomTextView
                    android:id="@+id/txtLike2"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="1 like" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/size_30"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    app:civ_border_width="@dimen/margin_2"
                    app:civ_border_color="@color/white"
                    android:src="@drawable/profile_placeholder"/>
                <CustomView.CustomTextView
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="Maryam_ali_12"
                    app:customFont="@string/DroidSans_Bold"/>
                <CustomView.CustomTextView
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="Where was this photo?" />
            </LinearLayout>
            <LinearLayout

                android:layout_marginTop="@dimen/size_20"
                android:layout_marginStart="@dimen/size_50"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CustomView.CustomTextView
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="1h" />
                <CustomView.CustomTextView
                    android:visibility="invisible"
                    android:layout_marginStart="@dimen/margin_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="@string/reply" />
                <ImageView
                    android:layout_marginStart="@dimen/size_30"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:src="@drawable/heart"/>

                <CustomView.CustomTextView
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_12"
                    android:text="1 like" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>